<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="start">

    <!-- User Message (Right Aligned) -->
    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingStart="16dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/tvUserSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/chat_user_text"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"
            android:alpha="0.9" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/chat_user_bg"
            app:strokeWidth="0dp"
            android:maxWidth="280dp">

            <TextView
                android:id="@+id/tvUserMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User message"
                android:textSize="15sp"
                android:textColor="@color/chat_user_text"
                android:padding="14dp"
                android:lineSpacingExtra="2dp"
                android:textColorHint="@color/chat_user_text" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Bot Message (Left Aligned) -->
    <LinearLayout
        android:id="@+id/layoutBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingEnd="16dp"
        android:paddingStart="4dp"
        android:maxWidth="280dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤–"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvBotSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CareerBot"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/chat_bot_text"
                android:alpha="0.9" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/chat_bot_bg"
            app:strokeWidth="0dp"
            android:maxWidth="280dp">

            <TextView
                android:id="@+id/tvBotMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bot message"
                android:textSize="15sp"
                android:textColor="@color/chat_bot_text"
                android:padding="14dp"
                android:lineSpacingExtra="2dp"
                android:textColorHint="@color/chat_bot_text" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Fallback for old layout (hidden) -->
    <LinearLayout
        android:id="@+id/layoutOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sender"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingTop="4dp" />
    </LinearLayout>

</LinearLayout>
