<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.CareerTipsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6750A4"
            app:title="Career Tips"
            app:titleTextColor="#FFFFFF"
            app:navigationIconTint="#FFFFFF" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ AI-Powered Career Insights"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6750A4"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get personalized career tips and guidance powered by AI"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Selector -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Topic"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCareerPlanning"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Career Planning"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipJobSearch"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Search" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipInterview"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interview Tips" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSkills"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skills Development" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNetworking"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Networking" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEducation"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Education" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI Generated Tip Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTipContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Loading Indicator -->
                    <LinearLayout
                        android:id="@+id/loadingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="40dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <ProgressBar
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="16dp"
                            android:indeterminateTint="#6750A4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Generating AI insights..."
                            android:textSize="16sp"
                            android:textColor="#6750A4"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!-- Content Layout -->
                    <LinearLayout
                        android:id="@+id/contentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- AI Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_bubble_ai"
                            android:paddingStart="12dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="6dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ¨ AI Generated"
                                android:textSize="12sp"
                                android:textColor="#6750A4"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Category Badge -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Career Planning"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_marginBottom="16dp" />

                        <!-- Tip Content -->
                        <TextView
                            android:id="@+id/tvTipContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap 'Generate New Tip' to get AI-powered career advice"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="6dp"
                            android:letterSpacing="0.01" />

                        <!-- Timestamp -->
                        <TextView
                            android:id="@+id/tvTimestamp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:gravity="end"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Generate Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabGenerateTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Generate New Tip"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="#FFFFFF"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
